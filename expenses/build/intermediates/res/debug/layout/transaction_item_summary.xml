<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/transactionItemSummaryLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/orange_300">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="3dp"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp">

        <LinearLayout
            android:id="@+id/transactionValueInLayout"
            android:layout_width="96dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true">
            <TextView
                android:id="@+id/transactionCurrencyIn"
                android:layout_width="10dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="3dp"
                android:layout_gravity="left"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:text="@string/currency">
            </TextView>

            <TextView
                android:id="@+id/transactionValueIn"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="3dp"
                android:gravity="right"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/green_500"
                android:text="@string/value_15250_00">
            </TextView>
        </LinearLayout>

        <TextView
            android:layout_alignParentRight="true"
            android:id="@+id/transactionDateTime"
            android:layout_width="85dp"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:textStyle="italic"
            android:layout_gravity="center_vertical"
            android:gravity="right"
            android:textColor="@color/black"
            android:text="@string/date">
        </TextView>

        <TextView
            android:id="@+id/transactionDescIn"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="3dp"
            android:layout_toRightOf="@id/transactionValueInLayout"
            android:layout_toLeftOf="@id/transactionDateTime"
            android:layout_gravity="left"
            android:textSize="18sp"
            android:singleLine="true"
            android:text="@string/revenue_label"
            android:textColor="@color/black">
        </TextView>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp">

        <LinearLayout
            android:id="@+id/transactionValueOutLayout"
            android:layout_width="96dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true">
            <TextView
                android:id="@+id/transactionCurrencyOut"
                android:layout_width="10dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="3dp"
                android:layout_gravity="left"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:text="@string/currency">
            </TextView>

            <TextView
                android:id="@+id/transactionValueOut"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="3dp"
                android:gravity="right"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/red_500"
                android:text="@string/value_15250_00">
            </TextView>
        </LinearLayout>

        <TextView
            android:id="@+id/transactionDescOut"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="3dp"
            android:layout_toRightOf="@id/transactionValueOutLayout"
            android:layout_gravity="left"
            android:textSize="18sp"
            android:singleLine="true"
            android:textColor="@color/black"
            android:text="@string/expense_label">
        </TextView>

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="3dp"
        android:layout_marginLeft="6dp"
        android:layout_marginRight="6dp">

        <LinearLayout
            android:id="@+id/transactionValueBalanceLayout"
            android:layout_width="96dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true">
            <TextView
                android:id="@+id/transactionCurrencyBalance"
                android:layout_width="10dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="3dp"
                android:layout_gravity="left"
                android:textSize="18sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:text="@string/currency">
            </TextView>

            <TextView
                android:id="@+id/transactionValueBalance"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="3dp"
                android:gravity="right"
                android:textSize="18sp"
                android:textStyle="bold"
                android:text="@string/value_15250_00">
            </TextView>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/transactionValueDiffLayout"
            android:layout_width="96dp"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true">
            <TextView
                android:id="@+id/transactionCurrencyDiff"
                android:layout_width="10dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="3dp"
                android:layout_gravity="left"
                android:textSize="18sp"
                android:textStyle="bold"
                android:text="@string/currency"
                android:textColor="@color/black">
            </TextView>

            <TextView
                android:id="@+id/transactionValueDiff"
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="3dp"
                android:gravity="right"
                android:textSize="18sp"
                android:textStyle="bold"
                android:text="@string/value_15250_00">
            </TextView>
        </LinearLayout>

        <TextView
            android:id="@+id/transactionDescNet"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="3dp"
            android:layout_toRightOf="@id/transactionValueBalanceLayout"
            android:layout_toLeftOf="@id/transactionValueDiffLayout"
            android:layout_gravity="left"
            android:textSize="18sp"
            android:singleLine="true"
            android:textColor="@color/black"
            android:text="@string/balance_label">
        </TextView>

    </RelativeLayout>


</LinearLayout>
