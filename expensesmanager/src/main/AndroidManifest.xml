<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.antso.expensesmanager" >

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".StartActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".transactions.TransactionListActivity"
            android:label="@string/title_transaction_list_activity" >
        </activity>
        <activity
            android:name=".transactions.TransactionEntryActivity"
            android:label="@string/title_activity_transaction" >
        </activity>
        <activity
            android:name=".accounts.AccountEntryActivity"
            android:label="@string/title_activity_account" >
        </activity>
    </application>

</manifest>
