<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:circleSectorview="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.antso.expensesmanager.accounts.AccountEntryActivity">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="6dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp">

        <com.antso.expensesmanager.views.CircleSectorView
            android:id="@+id/accountColor"
            android:layout_width="64dp"
            android:layout_height="64dp"
            circleSectorview:cFillColor="#ff0000"
            circleSectorview:cRadiusDp="32"
            circleSectorview:cAngleStart="0"
            circleSectorview:cAngleSweep="360"
            />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_gravity="center_vertical"
                android:textSize="32dp"
                android:text="Create Account"
                android:textColor="@color/black"
                android:gravity="right"/>
            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_gravity="center_vertical"
                android:textSize="16dp"
                android:text="Tap the circle to change the color"
                android:gravity="right"/>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/accountNameLabel"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="-16dp"
        android:textSize="14dp"
        android:text="Name"
        android:textStyle="italic"
        android:gravity="left"
        android:visibility="visible"/>

    <LinearLayout
        android:id="@+id/accountNameLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginBottom="6dp"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="16dp">

        <EditText
            android:id="@+id/accountName"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:textSize="20dp"
            android:text="Name"
            android:selectAllOnFocus="true"
            android:gravity="right"
            android:layout_gravity="bottom"/>

    </LinearLayout>

    <TextView
        android:id="@+id/accountValueLabel"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginBottom="-16dp"
        android:textSize="14dp"
        android:text="Balance"
        android:textStyle="italic"
        android:gravity="left"
        android:visibility="visible"/>

    <LinearLayout
        android:id="@+id/accountValueLayout"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80dp"
        android:layout_marginRight="16dp"
        android:layout_centerHorizontal="true">

        <TextView
            android:id="@+id/accountValueCurrency"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="6"
            android:textSize="20dp"
            android:text="$"
            android:gravity="center"/>

        <EditText
            android:id="@+id/accountValue"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="20dp"
            android:text="0.00"
            android:selectAllOnFocus="true"
            android:numeric="decimal"
            android:gravity="right"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/transactionConfirmButtonsLayout"
        android:orientation="horizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="6dp"
        android:layout_centerHorizontal="true">

        <Button
            android:id="@+id/accountConfirm"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Add"/>

        <Button
            android:id="@+id/accountCancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Cancel"/>

    </LinearLayout>

</LinearLayout>
