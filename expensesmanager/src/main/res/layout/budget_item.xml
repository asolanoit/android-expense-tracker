<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:circleSectorview="http://schemas.android.com/apk/res-auto"
    android:id="@+id/budgetItemLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <com.antso.expensesmanager.views.CircleSectorView
        android:id="@+id/budgetColor"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="16dp"
        circleSectorview:cFillColor="#ff0000"
        circleSectorview:cRadiusDp="32"
        circleSectorview:cAngleStart="0"
        circleSectorview:cAngleEnd="360"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="16dp"
        android:layout_weight="2.5"
        android:layout_gravity="center_vertical"
        android:orientation="vertical">
            <TextView
                android:id="@+id/budgetName"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textColor="#000000"
                android:text="Budget Name">
            </TextView>

            <TextView
                android:id="@+id/budgetBalance"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:textColor="#000000"
                android:gravity="left"
                android:textStyle="bold"
                android:text="$ 0.00">
            </TextView>
        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_weight="3"
        android:layout_gravity="top"

        android:orientation="vertical">

        <TextView
            android:id="@+id/budgetPeriod"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:textSize="14dp"
            android:textColor="#000000"
            android:text="2 Weeks">
        </TextView>

        <TextView
            android:id="@+id/budgetThreshold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:textSize="14dp"
            android:textColor="#000000"
            android:text="$ 0.00">
        </TextView>

    </LinearLayout>

</LinearLayout>