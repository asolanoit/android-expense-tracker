<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/accountName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_gravity="left"
        android:textSize="20sp"
        android:text="Account">
    </TextView>

    <TextView
        android:id="@+id/transactionDateTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_gravity="right"
        android:textSize="20sp"
        android:text="2014-May-11">
    </TextView>

    <TextView
        android:id="@+id/transactionDesc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/accountName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_gravity="left"
        android:textSize="25sp"
        android:text="Description">
    </TextView>

    <TextView
        android:id="@+id/transactionValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/accountName"
        android:layout_alignParentRight="true"
        android:layout_gravity="right"
        android:textSize="25sp"
        android:text="$ 50.00">
    </TextView>

</RelativeLayout><!-- From: file:/C:/Users/asolano/AndroidStudioProjects/ExpensesManager/expensesmanager/src/main/res/layout/transaction_item.xml -->