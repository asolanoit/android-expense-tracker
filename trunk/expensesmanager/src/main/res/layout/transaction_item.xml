<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:circleSectorview="http://schemas.android.com/apk/res-auto"

    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!--<View-->
        <!--android:layout_width="50dp"-->
        <!--android:layout_height="50dp"-->
        <!--android:layout_marginTop="5dp"-->
        <!--android:layout_marginLeft="5dp"-->
        <!--android:background="@drawable/quarter_circle"/>-->

    <com.antso.expensesmanager.views.CircleSectorView
        android:id="@+id/accountColor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="-48dp"
        android:layout_marginLeft="-48dp"
        circleSectorview:cFillColor="#0000ff"
        circleSectorview:cRadiusDp="48"
        circleSectorview:cAngleStart="0"
        circleSectorview:cAngleEnd="360"
        />

    <com.antso.expensesmanager.views.CircleSectorView
        android:id="@+id/budgetColor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:layout_marginLeft="16dp"
        android:layout_below="@+id/transactionDesc"
        circleSectorview:cFillColor="#ff0000"
        circleSectorview:cRadiusDp="8"
        circleSectorview:cAngleStart="0"
        circleSectorview:cAngleEnd="360"
        />

    <TextView
        android:id="@+id/accountName"
        android:layout_marginTop="6dp"
        android:layout_marginLeft="64dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_gravity="left"
        android:textSize="14dp"
        android:text="Account">
    </TextView>

    <TextView
        android:id="@+id/transactionDateTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:layout_marginRight="16dp"
        android:layout_alignParentRight="true"
        android:layout_gravity="right"
        android:textSize="14dp"
        android:textStyle="italic"
        android:text="2014-May-11">
    </TextView>

    <TextView
        android:id="@+id/transactionDesc"
        android:layout_marginLeft="60dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/accountName"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_gravity="left"
        android:textSize="25dp"
        android:text="Description">
    </TextView>

    <TextView
        android:id="@+id/transactionValue"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="16dp"
        android:layout_below="@+id/accountName"
        android:layout_alignParentRight="true"
        android:layout_gravity="right"
        android:textSize="25sp"
        android:textStyle="bold"
        android:text="$ 50.00">
    </TextView>

    <TextView
        android:id="@+id/budgetName"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="48dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/transactionDesc"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_gravity="left"
        android:textSize="14dp"
        android:text="Budget">
    </TextView>

</RelativeLayout>