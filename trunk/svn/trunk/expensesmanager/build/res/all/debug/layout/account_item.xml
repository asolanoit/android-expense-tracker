<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:id="@+id/accountColor"
        android:layout_width="20dp"
        android:layout_height="80dp"
        android:orientation="horizontal"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_gravity="left"
        android:background="#0000FF">
    </LinearLayout>

    <TextView
        android:id="@+id/accountName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/accountColor"
        android:layout_gravity="left"
        android:textSize="25sp"
        android:text="Account Name">
    </TextView>

    <TextView
        android:id="@+id/accountBalance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/accountName"
        android:layout_toRightOf="@+id/accountColor"
        android:layout_gravity="left"
        android:textSize="20sp"
        android:text="$ 1000.00">
    </TextView>

    <TextView
        android:id="@+id/accountMonthIn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_gravity="right"
        android:textSize="20sp"
        android:text="$ 1000.00">
    </TextView>

    <TextView
        android:id="@+id/accountMonthOut"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_gravity="right"
        android:layout_below="@id/accountMonthIn"
        android:textSize="20sp"
        android:text="$ 1000.00">
    </TextView>

    <TextView
        android:id="@+id/accountMonthBalance"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_gravity="right"
        android:layout_below="@id/accountMonthOut"
        android:textSize="20sp"
        android:text="$ 1000.00">
    </TextView>


</RelativeLayout><!-- From: file:/C:/Users/asolano/AndroidStudioProjects/ExpensesManager/expensesmanager/src/main/res/layout/account_item.xml -->