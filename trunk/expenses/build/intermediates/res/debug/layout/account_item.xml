<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:circleSectorview="http://schemas.android.com/apk/res-auto"
    android:id="@+id/accountItemLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <com.antso.expenses.views.CircleSectorView
        android:id="@+id/accountColor"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="16dp"
        circleSectorview:cFillColor="#ff0000"
        circleSectorview:cRadiusDp="32"
        circleSectorview:cAngleStart="0"
        circleSectorview:cAngleSweep="360"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="16dp"
        android:layout_weight="2.5"
        android:layout_gravity="center_vertical"
        android:orientation="vertical">
            <TextView
                android:id="@+id/accountName"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="@string/account">
            </TextView>

            <TextView
                android:id="@+id/accountBalance"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:gravity="left"
                android:textStyle="bold"
                android:text="@string/currency_value_0_00">
            </TextView>
        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_weight="3"
        android:layout_gravity="center_vertical"

        android:orientation="vertical">

        <TextView
            android:id="@+id/accountMonthIn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:textSize="14sp"
            android:text="@string/currency_value_0_00">
        </TextView>

        <TextView
            android:id="@+id/accountMonthOut"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:textSize="14sp"
            android:text="@string/currency_value_0_00">
        </TextView>

        <TextView
            android:id="@+id/accountMonthBalance"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:textSize="14sp"
            android:text="@string/currency_value_0_00">
        </TextView>
    </LinearLayout>

</LinearLayout><!-- From: file:/C:/Users/asolano/AndroidStudioProjects/Expenses/expenses/src/main/res/layout/account_item.xml -->